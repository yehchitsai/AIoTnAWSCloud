{
    "Version": "2008-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": [
                "arn:aws:s3:::[bucket_name]/*",
                "arn:aws:s3:::[bucket_name]"
            ],
            "Condition": {
                "IpAddress": {
                    "aws:SourceIp": "[my_public_ip]/32"
                }
            }
        }
    ]
}
